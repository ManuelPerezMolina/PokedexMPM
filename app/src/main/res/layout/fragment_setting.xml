<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    tools:context=".fragment.Setting">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/eliPok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="false"
        android:gravity="center"
        android:text="@string/eliminar_pokemon"
        android:textSize="40dp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Tidioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eliPok"
        android:layout_marginTop="140dp"
        android:background="@color/rojo"
        android:text="@string/idioma_aplicacion"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tidioma"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="50dp">

        <Button
            android:id="@+id/English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/idioma_ingles"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Castellano"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/idioma_castellano"
            android:textSize="30dp" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Tidioma"
        android:layout_marginStart="65dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="cursive"
        android:text="@string/CerrarSesion"
        android:textColor="#FF5722"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="555dp" />

</RelativeLayout>


